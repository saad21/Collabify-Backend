{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NestJS Application",
            "program": "${workspaceFolder}/${input:programPath}",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "programPath",
            "description": "Select the entry point for your application",
            "options": [
                "src/main.ts",
                "src/app.module.ts"
            ]
        }
    ]
}